<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/main_blue</item>
        <item name="android:statusBarColor">@color/main_blue</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.Design.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
